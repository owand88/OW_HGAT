-- return a set of items that were for sale yesterday on site 101
 SELECT auct_start_dt
 	   ,li.ITEM_ID
       ,li.ITEM_SITE_ID 
	   ,li.auct_type_code
	   ,c.CATEG_LVL2_NAME
	   ,1 listing_count
 FROM access_views.dw_lstg_item as li
 join ACCESS_VIEWS.DW_CATEGORY_GROUPINGS c
   on li.LEAF_CATEG_ID = c.LEAF_CATEG_ID and li.ITEM_SITE_ID = c.SITE_ID
 WHERE auct_start_dt between current_date - 2 and current_date - 1 
   and AUCT_END_DATE > CURRENT_DATE - 2
   and SITE_ID = 101
limit 5500; -- row limit

