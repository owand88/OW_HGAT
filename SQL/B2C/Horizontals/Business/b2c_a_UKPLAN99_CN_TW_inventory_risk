,'All' vertical
,'All' meta
,'All' l2
,item_loc_region
,item_location
,slr_region
,slr_country
,inventory
,sum(gmv_plan_2022) gmb_2022
FROM
CNrisk
group by 1,2,3,4,5,6,7,8,9
;

/* main output per country */
select
byr_country
,inventory
,sum(gmv_plan_2022) gmb_2022
from cnrisk
where B2C_C2C = 'B2C'
group by 1,2
