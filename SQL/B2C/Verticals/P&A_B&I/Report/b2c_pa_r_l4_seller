---4. ------------------------------------------
DROP TABLE IF EXISTS P_ICHAN_T.L4_ITEM_SUMMARY_2;
CREATE TABLE P_ICHAN_T.L4_ITEM_SUMMARY_2 AS 
( SELECT * FROM P_ICHAN_T.L4_ITEM_SUMMARY WHERE INVENTORY_PROP NOT IN ('Core','OTHERS') and ranking <=50);

